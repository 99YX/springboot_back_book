<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.yanxin.mapper.AdminMapper" >


    <select id="ListUser"   resultType="com.study.yanxin.pojo.User" >
        SELECT * FROM admin
    </select>
    <select id="listByCondition" resultType="com.study.yanxin.pojo">
        select * from admin
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{ name }, '%')
            </if>
            <if test="phone != null and phone != ''">
                and phone  like concat('%', #{ phone }, '%')
            </if>
        </where>
        order by id desc
    </select>

    <!--新增语句-->
    <insert id="save">
        insert into admin(name, username, age, sex, phone, address, account)
        values(#{name}, #{username}, #{age}, #{sex}, #{phone}, #{address}, #{account})
    </insert>

    <!--根据id查询语句-->
    <select id="getById"   resultType="com.study.yanxin.pojo.User" >
        SELECT * FROM admin where id=#{id}
    </select>
    <!--根据id更新语句-->

    <update id="update" >
        UPDATE admin
      <set>
          <if test="name!=null">name=#{name},</if>
          <if test="username!=null">username=#{username},</if>
          <if test="age!=null">age=#{age},</if>
          <if test="sex!=null">sex=#{sex},</if>
          <if test="account!=null">account=#{account},</if>
          <if test="address!=null">address=#{address},</if>
      </set>
         where id=#{id}
    </update>
</mapper>
